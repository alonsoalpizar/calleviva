# ============================================
# CalleViva - Variables de Entorno
# ============================================
# Copiar este archivo como .env y completar los valores
# cp .env.example .env

# ============================================
# SERVER
# ============================================
PORT=8080
ENV=development
# ENV=production

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=calleviva
DB_USER=calleviva
DB_PASSWORD=CAMBIAR_PASSWORD_SEGURO
DB_SSLMODE=disable

# Connection string completo (alternativo)
# DATABASE_URL=postgres://calleviva:password@localhost:5432/calleviva?sslmode=disable

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# CLAUDE API (Anthropic)
# ============================================
CLAUDE_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
CLAUDE_MODEL=claude-sonnet-4-20250514
# Límite de tokens por request
CLAUDE_MAX_TOKENS=500
# Timeout en segundos
CLAUDE_TIMEOUT=30

# ============================================
# JWT / AUTH
# ============================================
JWT_SECRET=CAMBIAR_A_UN_SECRET_MUY_LARGO_Y_SEGURO_MINIMO_32_CARACTERES
JWT_EXPIRY_HOURS=72

# ============================================
# CORS
# ============================================
# En desarrollo
FRONTEND_URL=http://localhost:5173
# En producción
# FRONTEND_URL=https://calleviva.club

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
# LOG_LEVEL=info
# LOG_LEVEL=warn
# LOG_LEVEL=error

# ============================================
# GAME CONFIG
# ============================================
# Día inicial de nuevas partidas
GAME_INITIAL_MONEY=15000
GAME_INITIAL_REPUTATION=0

# ============================================
# AI CACHE
# ============================================
# Tiempo de vida del cache de IA en segundos (24 horas)
AI_CACHE_TTL=86400
# Máximo de items en cache por contexto
AI_CACHE_MAX_ITEMS=100
